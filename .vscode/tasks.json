{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ESP-IDF: Set Target",
            "type": "shell",
            "command": "idf.py set-target esp32p4",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "ESP-IDF: Build",
            "type": "shell",
            "command": "idf.py build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "ESP-IDF: Flash",
            "type": "shell",
            "command": "idf.py -p ${config:idf.port} flash",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "ESP-IDF: Monitor",
            "type": "shell",
            "command": "idf.py -p ${config:idf.port} monitor",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}
